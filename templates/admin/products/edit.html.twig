        <div class="row">
            <div class="col-12 mt-5 mb-5">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
{#                {{ form_row(form.slug) }}#}
                {#                {{ form_row(form.imageFile) }}#}
                {{ form_row(form.description) }}
