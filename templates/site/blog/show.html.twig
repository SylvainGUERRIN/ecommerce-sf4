{% extends 'site/partials/base.html.twig' %}
{% block title %}{{ post.title }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/post.css') }}">
{% endblock %}

{% block body %}
    <div class="text-center mt-5 mb-5">
        <h1>{{ post.title|capitalize }}</h1>
    </div>
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12 col-lg-5">
                {% if vich_uploader_asset(post, 'imageFile') is not null %}
                    <img src="{{ vich_uploader_asset( post, 'imageFile') }}" alt="image de l'article" class="img-post">
                {% else %}
                    <img src="{{ asset('assets/produits/default.png')| imagine_filter('medium') }}" alt="image par défaut">
                {% endif %}
            </div>
            <div class="col-md-12 col-lg-7">
                <p class="text-justify">{{ post.content }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <p>Tags:
{#                    {% for postTag in postTags %}#}
{#                        <a class="btn btn-color mb-3" href="{{ path('categorie_show', {'slugcat': postTag.slug}) }}">{{ postTag.name }}</a>#}
{#                    {% endfor %}#}
                </p>
{#                <p>Auteur: {{ post.user.username }} <br> Publié le: {{ post.postCreatedAt| date('d/m/Y') }}</p>#}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12 mt-5 mb-5">
                <h2 class="text-center mb-3">Laissez un commentaire</h2>
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.mail) }}
                {{ form_row(form.content) }}
                <button type="submit" class="btn btn-primary">Commentez !</button>
                {{ form_end((form)) }}
            </div>
        </div>
        <div class="row mt-3 text-center">
            {% if comments is empty %}
                <div class="col-12 text-center alert alert-light">
                    <h3>Commentaires: </h3>
                    <p>Cet post n'a pas encore de commentaires</p>
                </div>
            {% else %}
                <div class="col-12 text-center mb-5">
                <h3 class="mb-5">Commentaires: </h3>
                {% for comment in comments %}
                    {% if comment.valid == true %}
                        <div class="block-comment mb-5">
                        <h6>Le {{ comment.commentAt | date('d/m/Y') }} à {{ comment.commentAt | date('H:m:i') }}
                            commentaire de {{ comment.name }}</h6>
                        <p>{{ comment.content }}</p>
                        </div>
                    {% else %}
                        <p>
                            Commentaire en cours de validation.
                        </p>
                    {% endif %}
                {% endfor %}
                </div>
            {% endif %}
        </div>
        <div class="row">
            <div class="col-12 nav-pagination">
                {{ knp_pagination_render(comments) }}
            </div>
        </div>
    </div>
{% endblock %}
