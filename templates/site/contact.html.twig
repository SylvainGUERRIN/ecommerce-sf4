{% extends 'site/partials/base.html.twig' %}

{% block title %}Contact - Ecommerce{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css"
          integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
          crossorigin=""/>
    <link rel="stylesheet" href="{{ asset('css/contact.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-5">
            <div class="col-sm-12 col-md-6">
                <div id="mapid"></div>
            </div>
            <div class="col-sm-12 col-md-6">
                <h1 class="text-center mb-3">Formulaire de contact</h1>
                {{ form_start(form) }}

                <div class="row mb-5">
                    <div class="col-3">
                        {{ form_label(form.nom) }}
                    </div>
                    <div class="col-9">
                        {{ form_widget(form.nom) }}
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-3">
                        {{ form_label(form.email) }}
                    </div>
                    <div class="col-9">
                        {{ form_widget(form.email) }}
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-3">
                        {{ form_label(form.sujet) }}
                    </div>
                    <div class="col-9">
                        {{ form_widget(form.sujet) }}
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-12 text-center">
                        {{ form_row(form.description) }}
                    </div>
                </div>
{#                <div class="row mb-5">#}
{#                    <div class="col-12 text-center">#}
{#                        {{ form_widget(form.recaptcha) }}#}
{#                    </div>#}
{#                </div>#}
                <div class="row">
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-color">Envoyer</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="row mt-5 mb-5">
            <div class="col-12 text-center mb-3">
                <h1>Mes coordonn√©es</h1>
            </div>
            <div class="col-sm-12 col-md-4 text-center">
                <img src="{{ asset('assets/icones/pin-white-64px.png') }}" alt="icone marker" width="15%">
                <p>adresse <br> 52495 ville</p>
            </div>
            <div class="col-sm-12 col-md-4 text-center">
                <img src="{{ asset('assets/icones/incoming-call-white-64px.png') }}" alt="icone telephone">
                <a class="a-contact" href="tel:0788847774"><p class="">06 00 00 00 00</p></a>
            </div>
            <div class="col-sm-12 col-md-4 text-center">
                <img src="{{ asset('assets/icones/envelope-white-64px.png') }}" alt="icone mail">
                <a class="a-contact" href="mailto:passionlcouture@gmail.com"><p>mail@gmail.com</p></a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js"
            integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og=="
            crossorigin=""></script>
    <script src="{{ asset('js/contact.js') }}"></script>
{% endblock %}
