{% extends 'site/partials/base.html.twig' %}
{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-5">
            <div class="col-12">
                <h1 class="mb-5 mt-5 font-weight-normal text-center">Veuillez vous connecter</h1>
                {% if error %}
                    <div class="alert alert-danger">Une erreur est survenue, l'adresse mail et/ou
                        le mot de passe ne sont pas valides.</div>
                {% endif %}
                <form action="{{ path('user_connexion') }}" method="post">
                    <div class="form-group">
                        <label for="username" class="sr-only">Votre adresse mail</label>
                        <input type="text" name="_username" value="{{ last_username }}" id="username" class="form-control" placeholder="Veuillez mettre votre adresse mail" required>
                    </div>
                    <div class="form-group mb-5">
                        <label for="password" class="sr-only">Votre mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Veuillez mettre votre mot de passe" required>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>
                    <div class="form-group text-center mb-5">
                        <button class="btn btn-lg btn-color" type="submit">
                            Se connecter
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
